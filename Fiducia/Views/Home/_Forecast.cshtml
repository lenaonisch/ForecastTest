@model Fiducia.Models.ForecastData

<div class="form-group row p-0 m-0">
    <div class="form-group row">
        <div class="col-4">
            @Html.LabelFor(t => t.MinTemp, "Min temp")
        </div>
        <div class="col-6">
            <span>@Model.MinTemp</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            @Html.LabelFor(t => t.MaxTemp, "Max temp")
        </div>
        <div class="col-6">
            <span>@Model.MaxTemp</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            @Html.LabelFor(t => t.Rain, "Rain")
        </div>
        <div class="col-6">
            <span>@Model.Rain</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            @Html.LabelFor(t => t.Summary, "Summary")
        </div>
        <div class="col-6">
            <span>@Model.Summary</span>
        </div>
    </div>
</div>
